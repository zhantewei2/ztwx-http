{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "es6",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "declaration": true,
    "outDir": "types",
    "types": [
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "package/**/*.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}
